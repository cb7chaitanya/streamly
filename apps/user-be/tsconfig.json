{
    "compilerOptions": {
      "target": "ES6",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "incremental": false
    },
    "include": [
      "./src/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}